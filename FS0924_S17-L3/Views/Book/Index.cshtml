@model BooksListViewModel

@{
    ViewData["Title"] = "All Books";
}

<div class="container">
    <h1>All books</h1>
    @if (Model.Books != null && Model.Books.Any())
    {
        <div class="row">
            @foreach (var book in Model.Books)
            {
                var available = book.Available ? "opacity-50" : "";

                <div class="col-lg-2 mb-3">
                    <div class="card" style="max-width: 18rem;">
                        <img src=@book.Cover class="img-fluid @available" alt=@book.Title style="max-height: 250px">
                        <div class="card-body">
                            <h6 class="card-title">@book.Title</h6>
                        </div>
                    </div>
                </div>
            }
        </div>


    }
    else
    {
        <p>No book found!</p>
    }
</div>